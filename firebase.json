{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/**/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300, s-max-age=604800, must-revalidate"
          }
        ]
      },
      {
        "source": "/**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300, s-max-age=604800, must-revalidate"
          }
        ]
      },
      {
        "source": "/static/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "/favicon.ico",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      },
      {
        "source": "/**/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/modules/*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/atom.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/:page/index.html",
        "destination": "/:page/",
        "type": 301
      },
      {
        "source": "/articles/:slug/index.html",
        "destination": "/articles/:slug/",
        "type": 301
      },
      {
        "regex": "(.+)-google-analytics-(.+)",
        "destination": ":1-ga-:2",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/log",
        "function": "log"
      }
    ]
  }
}

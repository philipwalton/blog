{
  "name": "blog",
  "version": "4.19.0",
  "description": "The source code for philipwalton.com",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/philipwalton/blog.git"
  },
  "author": {
    "name": "Philip Walton",
    "url": "https://philipwalton.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philipwalton/blog/issues"
  },
  "scripts": {
    "build": "node ./tasks/build.js",
    "deploy": "git push --follow-tags && firebase deploy -P philipwalton-site",
    "format": "prettier \"**/*.{cjs,js,json}\" --write --ignore-path .gitignore",
    "lint": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
    "release:major": "npm version major -m 'Release v%s'",
    "release:minor": "npm version minor -m 'Release v%s'",
    "release:patch": "npm version patch -m 'Release v%s'",
    "stage": "firebase deploy -P philipwalton-staging",
    "start": "node ./tasks/watch.js",
    "test": "wdio run wdio.conf.cjs",
    "version": "NODE_ENV=production npm run build",
    "postversion": "npm run deploy",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint --fix --ignore-path .gitignore",
    "**/*.{cjs,js,json}": "prettier --write --ignore-path .gitignore"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "quoteProps": "preserve",
    "singleQuote": true
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@wdio/cli": "^8.28.8",
    "@wdio/local-runner": "^8.28.8",
    "@wdio/mocha-framework": "^8.28.8",
    "@wdio/spec-reporter": "^8.28.8",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "chromedriver": "^120.0.2",
    "common-tags": "^1.8.2",
    "cssnano": "6.0.3",
    "dom-utils": "^0.9.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "firebase-tools": "^13.0.3",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.0",
    "gzip-size": "^7.0.0",
    "he": "~1.2.0",
    "highlight.js": "^11.9.0",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.3",
    "image-size": "^1.1.1",
    "jsesc": "^3.0.2",
    "lint-staged": "^15.2.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "md5": "^2.3.0",
    "mocha": "^10.2.0",
    "moment-timezone": "^0.5.44",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "pending-beacon-polyfill": "^0.1.0",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.2.4",
    "rev-hash": "^4.1.0",
    "rev-path": "^3.0.0",
    "rollup": "^4.9.5",
    "sharp": "^0.33.2",
    "superstatic": "^9.0.3",
    "vitest": "^1.2.1",
    "wdio-chromedriver-service": "^8.1.1",
    "web-vitals": "^4.0.0-rc.0",
    "webdriverio": "^8.28.8",
    "workbox-background-sync": "^7.0.0",
    "workbox-broadcast-update": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-google-analytics": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-streams": "^7.0.0",
    "workbox-window": "^7.0.0",
    "wrangler": "^3.23.0"
  }
}

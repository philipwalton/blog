{
  "name": "blog",
  "version": "4.19.0",
  "description": "The source code for philipwalton.com",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/philipwalton/blog.git"
  },
  "author": {
    "name": "Philip Walton",
    "url": "https://philipwalton.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philipwalton/blog/issues"
  },
  "scripts": {
    "build": "gulp build",
    "deploy": "git push --follow-tags && firebase deploy -P philipwalton-site",
    "format": "prettier \"**/*.{cjs,js,json}\" --write --ignore-path .gitignore",
    "lint": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
    "release:major": "npm version major -m 'Release v%s'",
    "release:minor": "npm version minor -m 'Release v%s'",
    "release:patch": "npm version patch -m 'Release v%s'",
    "stage": "firebase deploy -P philipwalton-staging",
    "start": "gulp watch",
    "test": "wdio run wdio.conf.cjs",
    "version": "NODE_ENV=production gulp build",
    "postversion": "npm run deploy",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint --fix --ignore-path .gitignore",
    "**/*.{cjs,js,json}": "prettier --write --ignore-path .gitignore"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "quoteProps": "preserve",
    "singleQuote": true
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@wdio/cli": "^8.20.2",
    "@wdio/local-runner": "^8.20.0",
    "@wdio/mocha-framework": "^8.20.0",
    "@wdio/sauce-service": "^8.20.0",
    "@wdio/selenium-standalone-service": "^8.15.0",
    "@wdio/spec-reporter": "^8.20.0",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "chromedriver": "^118.0.1",
    "common-tags": "^1.8.2",
    "cssnano": "6.0.1",
    "dom-utils": "^0.9.0",
    "eslint": "^8.52.0",
    "express": "^4.18.2",
    "firebase-tools": "^12.7.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "gm": "^1.25.0",
    "gulp": "^4.0.2",
    "gzip-size": "^7.0.0",
    "he": "~1.2.0",
    "highlight.js": "^11.9.0",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.3",
    "image-size": "^1.0.2",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "jsesc": "^3.0.2",
    "lint-staged": "^15.0.2",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "md5": "^2.3.0",
    "mocha": "^10.2.0",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "pending-beacon-polyfill": "^0.1.0",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.0.1",
    "postcss-url": "^10.1.3",
    "prettier": "^3.0.3",
    "rev-hash": "^4.0.0",
    "rev-path": "^3.0.0",
    "rollup": "^3.15.0",
    "sharp": "^0.32.6",
    "superstatic": "^9.0.3",
    "vitest": "^0.34.6",
    "wdio-chromedriver-service": "^8.1.1",
    "web-vitals": "^3.5.0",
    "webdriverio": "^8.20.0",
    "workbox-background-sync": "^6.5.4",
    "workbox-broadcast-update": "^6.5.4",
    "workbox-core": "^6.5.4",
    "workbox-expiration": "^6.5.4",
    "workbox-google-analytics": "^6.5.4",
    "workbox-precaching": "^6.5.4",
    "workbox-routing": "^6.5.4",
    "workbox-strategies": "^6.5.4",
